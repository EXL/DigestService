[Unit]
Description=exlmoto
Wants=network-online.target
After=network.target network-online.target postgres.service

[Service]
WorkingDirectory=/srv/
User=opc
ExecStart=/usr/bin/java -jar /srv/ru.exlmoto-1.0.jar
StandardOutput=journal
StandardError=journal
SyslogIdentifier=exlmoto
SuccessExitStatus=143
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
